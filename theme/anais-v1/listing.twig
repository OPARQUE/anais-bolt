{% include 'partials/_header.twig' %}
<div class="container">
    {% include 'partials/_search.twig' with { 'content': 'artigos' } %}
</div>

<div class="breadcrumb-anais">
    <div class="container card1">
        <div class="row">
            <div class="col-xs-7">
                <a href="{{paths.rooturl}}">
                    HOME
                </a>
                <span class="fa fa-angle-right"></span>
                <strong>{{record.sigla|upper}}</strong> <span class="small">{{record.titulo|upper}}</span>
            </div>
            {% setcontent temas = 'temas' %}
            {% for item in temas %}
                <div class="col-xs-1 menu-temas">
                    {% if item|current %}
                        <strong><u>{{ item.sigla|upper }}</u></strong>
                    {% else %}
                        <a href="{{ item.link }}">
                            {{ item.sigla|upper }}
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<div class="listing">
    <div class="container">
        <div class="row">
            {% set ids = record.relation.artigos|join(" || ") %}
            {% setcontent artigos = "artigos" where { id: ids } allowpaging limit 10 %}

            {% if artigos|length > 1 %}
                {% for item in artigos %}
                    <div class="col-xs-12">
                        <div class="card-artigo">
                            <div class="row">
                                <div class="col-md-6">
                                    <h2 class="azul">{{item.titulo}}</h2>
                                    <div class="autores-artigo">
                                        <span class="pre-titulo">AUTORES:</span><br>
                                        {{item.autores}}
                                    </div>
                                    <div class="palavras-chave-artigo">
                                        <span class="pre-titulo">PALAVRAS-CHAVE:</span><br>
                                        {{item.palavras_chave}}
                                    </div>
                                    <a href="{{paths.files}}{{item.arquivo}}" class="btn btn-primary btn-lg link-baixar-artigo" download>
                                        <span class="fa fa-download"></span> baixar artigo
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <div class="corpo-artigo">
                                        <span class="pre-titulo">RESUMO:</span>
                                        <p>
                                            {{item.resumo}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-xs-12">
                    <div class="card-artigo">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="azul">{{artigos.titulo}}</h2>
                                <div class="autores-artigo">
                                    <span class="pre-titulo">AUTORES:</span><br>
                                    {{artigos.autores}}
                                </div>
                                <div class="palavras-chave-artigo">
                                    <span class="pre-titulo">PALAVRAS-CHAVE:</span><br>
                                    {{artigos.palavras_chave}}
                                </div>
                                <a href="{{paths.files}}{{artigos.arquivo}}" class="btn btn-primary btn-lg link-baixar-artigo" download>
                                    <span class="fa fa-download"></span> baixar artigo
                                </a>
                            </div>
                            <div class="col-md-6">
                                <div class="corpo-artigo">
                                    <span class="pre-titulo">RESUMO:</span>
                                    <p>
                                        {{artigos.resumo}}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="col-xs-12">
                {{pager('artigos')}}
            </div>

        </div>
    </div>
</div>

{% include 'partials/_footer.twig' %}